{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "todo",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "dueDate": {
        "type": "string",
        "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
      }
    },
    "required": [
        "name",
        "dueDate"
      ],
    "additionalProperties": false
  }
